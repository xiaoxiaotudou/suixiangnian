.splash-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.splash-wrapper > image {
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: -99999;
  width: 100%;
  height: 100vh;
}

.avatar {
  margin-top: 150rpx;
  border: 1rpx solid rgba(255, 255, 255, 1);
  border-radius: 50%;
  height: 170rpx;
  width: 170rpx;
  overflow: hidden;
}

.description {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(51, 51, 51, 1);
  font-size: 26rpx;
  line-height: 48rpx;
}

.authorized-button {
  background: rgba(255, 255, 255, 0.1);
  margin-top: 50rpx;
  width: 260rpx;
  height: 88rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  line-height: 88rpx;
  font-size: 30rpx;
}