@import "../../style/colorui/colorui.wxss";
@import "../../style/colorui/icon.wxss";
@import "../../style/common.wxss";
.avatar {
  display: inline-flex;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
}

.background {
  position: absolute;
  z-index: -9999;
  width: 100%;
  height: 396rpx;
}

.avatar-item {
  margin-bottom: 30rpx;
}

.profile-item {
  width: 690rpx;
  height: 128rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 12rpx 28rpx 0rpx rgba(188, 188, 188, 0.29);
  border-radius: 20rpx;
  border: 2rpx solid rgba(239, 239, 239, 1);
  margin-bottom: 18rpx;
  overflow: hidden;
}

.profile-item text {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.profile-item.service {
  height: 274rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.arrow {
  height: 24rpx;
  width: 14rpx;
  margin-left: auto;
  margin-right: 30rpx;
}

.tip {
  width: 690rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #EFEFEF;
  overflow: hidden;
  justify-content: center;
}

.tip image {
  width: 44rpx;
  height: 44rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  margin-right: 8rpx;
}

.tip text {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 42rpx;
}

.tip-item {
  width: 230rpx;
}

.tip-item image {
  height: 72rpx;
  width: 72rpx;
  margin-top: 30rpx;
}

.tip-item text {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
  margin-top: 18rpx;
}