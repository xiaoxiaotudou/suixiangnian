scroll-view {
  height: 100vh;
}

.provice-wrapper,
.city-wrapper {
 margin-left: 30rpx;
}

.prefix {
  margin-top: 30rpx;
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  background: rgba(17, 212, 255, 1);
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 56rpx;
}

.location {
  padding: 24rpx 0rpx;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
}

.index {
  position: fixed;
  right: 10rpx;
  bottom: 130rpx;
  width: 48rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 44rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: rgba(17, 212, 255, 1);
  text-align: center;
}

.index view:first-child {
  margin-top: 20rpx;
}

.index view:last-child {
  margin-bottom: 20rpx;
}