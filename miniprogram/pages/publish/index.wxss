.text-wrapper {
  margin-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
}

.text-wrapper > textarea {
  width: 100%;
  height: 200rpx;
  padding: 10rpx;
  border-radius: 10rpx;
  border: 1rpx dashed rgba(0, 0, 0, 0.6);
}

.images-wrapper {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.image-wrapper {
  position: relative;
  width: 170rpx;
  height: 170rpx;
  margin-right: calc((100% - 170rpx - 170rpx - 170rpx - 170rpx)/3);
}

.image-wrapper:last-child {
  margin-right: 0rpx;
}

.image-wrapper > image {
  width: 170rpx;
  height: 170rpx;
}

.image-wrapper > view {
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  width: 30rpx;
  height: 30rpx;
  background: rgba(0, 0, 0, 0.3);
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 30rpx;
}

.image-add-wrapper {
  width: 170rpx;
  height: 170rpx;
  border-radius: 10rpx;
  border: 1rpx dashed rgba(0, 0, 0, 0.6);
}

.image-add-wrapper > image {
  width: 120rpx;
  height: 120rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
}

.tags-wrapper {
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: row;
  align-content: center;
}

.label-wrapper {
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.tag-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-grow: 1;
}

.tag {
  padding: 10rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.6);
}

.tag.selected {
  border: 1rpx solid rgba(57, 181, 74, 1);
}

.publish-wrapper {
  margin: 40rpx auto;
  width: 690rpx;
  height: 80rpx;
  background: rgba(255, 176, 64, 1);
  box-shadow: 0rpx 14rpx 14rpx 0rpx rgba(255, 176, 64, 0.25);
  border-radius: 40rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  line-height: 80rpx;
}