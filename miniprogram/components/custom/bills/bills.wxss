.horizontal {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.vertical {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.bills-wrapper {
  width: 100%;
  overflow: hidden;
}

.total-wrapper {
  border-bottom: 1rpx solid rgba(229,229,229,1);
  background: rgb(255, 2555, 255);
  font-size: 32rpx;
}

.total {
  margin-left: 30rpx;
}

.common {
  width: 40%;
}

.bill {
  white-space: nowrap;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
}

.move {
  transform: translateX(-200rpx);
}

.bill-data {
  width: 750rpx;
  background: rgb(255, 2555, 255);
}

.bill-data image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 30rpx;
}

.content {
  margin-left: 30rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  flex-grow: 2;
}

.type {
  font-size: 30rpx;
}

.info {
  font-size: 26rpx;
  margin-top: 12rpx;
  color:rgba(153, 153, 153, 1);
}

.amount-wrapper {
  margin-right: 30rpx;
}

.amount {
  font-size: 36rpx;
}

.revenue {
  color: rgba(84, 219, 0, 1);
}

.bill-btn {
  width: 200rpx;
  height: 100%;
  position: absolute;
  right: 0;
  transform: translateX(100%);
}

.edit, .delete {
  width: 100rpx;
  height: 100%;
  color: #FFFFFF;
}

.edit {
  background: #8799A3;
}

.delete {
  background: #E54D42;
}