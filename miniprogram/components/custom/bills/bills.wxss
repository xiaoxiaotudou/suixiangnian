.center {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.horizontal {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
}

.vertical {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.bills-wrapper {
  width: 100%;
  overflow: hidden;
}

.total-wrapper {
  border-bottom: 1rpx solid rgba(229,229,229,1);
  background: rgb(255, 2555, 255);
  font-size: 32rpx;
}

.total {
  margin-left: 30rpx;
}

.common {
  width: 40%;
}

.bill {
  white-space: nowrap;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
  position: relative;
}

.move {
  transform: translateX(-200rpx);
}

.bill-data {
  width: 750rpx;
  background: rgb(255, 2555, 255);
}

.bill-data image {
  width: 64rpx;
  height: 64rpx;
  margin-left: 30rpx;
}

.content {
  margin-left: 30rpx;
  margin-top: 18rpx;
  margin-bottom: 18rpx;
  flex-grow: 2;
}

.type {
  font-size: 30rpx;
}

.info {
  font-size: 26rpx;
  margin-top: 12rpx;
  color:rgba(153, 153, 153, 1);
}

.amount-wrapper {
  margin-right: 30rpx;
}

.amount {
  font-size: 36rpx;
}

.revenue {
  color: rgba(84, 219, 0, 1);
}

.bill-btn {
  width: 200rpx;
  height: 100%;
  position: absolute;
  right: 0;
  transform: translateX(100%);
}

.edit, .delete {
  width: 100rpx;
  height: 100%;
  color: #FFFFFF;
}

.edit {
  background: #8799A3;
}

.delete {
  background: #E54D42;
}

.edit-wrapper {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 100vh;
  width: 100%;
  z-index: 99;
  background: rgba(0, 0, 0, 0.6);
}

.background {
  width: 630rpx;
  max-height: 550rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
}

.edit-item {
  overflow: hidden;
  margin-top: 35rpx;
  margin-bottom: 20rpx;
}

.label {
  width: 200rpx;
  font-size: 30rpx;
  line-height: 30rpx;
  text-align: right;
}

.value {
  font-size: 30rpx;
  line-height: 30rpx;
  width: 400rpx;
  text-align: right;
}

.select::after {
  font-family: iconfont;
  content: "\e6a3";
  font-size: 32rpx;
  line-height: 32rpx;
}

.description {
  text-align: left;
  height: 200rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  background: rgba(245, 245, 245, 1);
}

.edit-btn {
  width: 50%;
  height: 90rpx;
  border-top: 1rpx solid rgba(229, 229, 229, 1);
}

.update {
  border-left: 1rpx solid rgba(229, 229, 229, 1);
}