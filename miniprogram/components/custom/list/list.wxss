.center {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.horizontal {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
}

.list-wrapper {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 100vh;
  width: 100%;
  z-index: 100;
  background: rgba(0, 0, 0, 0.6);
}

.background {
  width: 630rpx;
  max-height: 550rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
}

.header {
  height: 100rpx;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
  position: relative;
  font-size: 34rpx;
}

.addbtn {
  position: absolute;
  right: 30rpx;
}

.items {
  max-height: 450rpx;
}

.item {
  height: 90rpx;
  width: 630rpx;
  border-top: 1rpx solid rgba(229, 229, 229, 1);
}

.first {
  border-top: none;
}

.item image {
  width: 35rpx;
  height: 35rpx;
  margin-left: 30rpx;
}

.content {
  font-size: 30rpx;
  width: 410rpx;
  margin-left: 15rpx;
}

.delete {
  margin-left: 25rpx;
}

.placeholder {
  color: rgba(0, 0, 0, 0.55);
}

.content-wrapper {
  font-size: 34rpx;
  height: 200rpx;
}

.content-wrapper view {
  margin-left: 30rpx;
}

.content input {
  
}

.save, .cancel {
  font-size: 36rpx;
  width: 50%;
  height: 90rpx;
  border-top: 1rpx solid rgba(229, 229, 229, 1);
}

.save {
  border-left: 1rpx solid rgba(229, 229, 229, 1);
}