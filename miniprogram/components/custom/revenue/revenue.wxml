<view class="revenue vertical">
  <view class="revenue-item horizontal">
    <view class="label">日期：</view>
    <picker mode="date" value="{{selectedDate}}" bindchange="dateChange">
      <view class="value select">{{selectedDate}}</view>
    </picker>
  </view>
  <view class="revenue-item horizontal">
    <view class="label">类型：</view>
    <picker range-key="content" value="{{revenueTypeIndex}}" range="{{revenueTypes}}" bindchange="revenueTypeChange" >
      <view class="value select">{{revenueTypes[revenueTypeIndex].content}}</view>
    </picker>
  </view>
  <view class="revenue-item horizontal">
    <view class="label">收入：</view>
    <input class="value" type="digit" placeholder="请输入收入" bindinput="saveRevenue"></input>
  </view>
  <view class="revenue-item horizontal">
    <view class="label">成本：</view>
    <input class="value" type="digit" placeholder="请输入成本" bindinput="saveBase"></input>
  </view>
  <view class="revenue-item horizontal">
    <view class="label">结账类型：</view>
    <picker range-key="type" value="{{billTypeIndex}}" range="{{billTypes}}" bindchange="billTypeChange">
      <view class="value select">{{billTypes[billTypeIndex].type}}</view>
    </picker>
  </view>
  <view class="revenue-item horizontal">
    <view class="label">是否结账：</view>
    <picker range-key="closeType" value="{{billCloseTypeIndex}}" range="{{billCloseTypes}}" bindchange="closeInputTypeChange">
      <view class="value select">{{billCloseTypes[billCloseTypeIndex].closeType}}</view>
    </picker>
  </view>
  <button class="submit-wrapper" bindtap="submit">确认提交</button> 
</view>
<view class="modal" wx:if="{{showModal}}">
  <view class="modal-content">
    <view class="modal-label">添加新进账类型</view>
    <view class="modal-data">
      <view class="modal-data-type">
        <label>类型：</label><input placeholder="请输入新类型" bindinput="addInputType"></input>
      </view>
    </view>
    <view class="modal-btn">
      <view class="btn" bindtap="hideModal">取消</view>
      <view class="btn" bindtap="saveInputType">保存</view>
    </view>
  </view>
</view>